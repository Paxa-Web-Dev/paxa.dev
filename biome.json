{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"lineWidth": 320
	},
	"javascript": {
    "formatter": {
      "quoteStyle": "single",
			"trailingComma": "none",
			"semicolons": "asNeeded"
    }
  }
}
